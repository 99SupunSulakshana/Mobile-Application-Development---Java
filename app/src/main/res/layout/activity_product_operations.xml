<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.LolaCupCakeApplication.ProductOperations">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/admin"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/op1"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="5dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cupcake6"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/imgt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/insert"
            android:textAlignment="center"
            android:textColor="#f20707"
            android:textSize="15sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/op2"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cupcake10"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/imgt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/viewA"
                    android:textAlignment="center"
                    android:textColor="#f20707"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/op3"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cupcake15"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/imgt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/updateA"
                    android:textAlignment="center"
                    android:textColor="#f20707"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/op4"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cupcake1"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/imgt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/deleteA"
                    android:textAlignment="center"
                    android:textColor="#f20707"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/op5"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cupcake6"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/imgt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/searchA"
                    android:textAlignment="center"
                    android:textColor="#f20707"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>