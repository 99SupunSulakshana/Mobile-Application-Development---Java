<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_pID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#E31064"
        android:layout_marginTop="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lbl_pName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E31064" />

    <ImageView
        android:id="@+id/lbl_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:onClick="Increament"
            android:text="@string/min"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/qty"
            android:textColor="#E31064"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="135dp"
            android:background="@drawable/custom_button"
            android:onClick="decreament"
            android:text="@string/plus"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold"></Button>
    </RelativeLayout>
    <TextView
        android:id="@+id/lbl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#E31064"/>

    <TextView
        android:id="@+id/lbl_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#E31064"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnGetItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_button"
        android:onClick="getCupCake"
        android:text="@string/getItem" />

</LinearLayout>